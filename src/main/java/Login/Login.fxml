<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<fx:root type="javafx.scene.layout.AnchorPane"
         xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>

    <Button fx:id="adminLogin" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" text="Admin"
            textAlignment="RIGHT"/>

    <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <ImageView fx:id="logo"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"
                   GridPane.columnSpan="3"
                   GridPane.rowSpan="2"
                   fitHeight="200.0"
                   fitWidth="200.0"
                   preserveRatio="true"
                   cache="true"/>

        <Text
                text="The Hydrant"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3"
                GridPane.columnSpan="2"/>

        <!-- FORM FOR USER LOGIN        -->
        <GridPane fx:id="userLoginForm"
                  GridPane.columnIndex="0"
                  GridPane.rowIndex="4"
                  GridPane.rowSpan="2"
                  GridPane.columnSpan="2"
                  alignment="CENTER"
                  hgap="5"
                  vgap="5">
            <children>
                <TextField
                        fx:id="userID"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2"
                        GridPane.rowIndex="0"
                        prefWidth="200"
                        promptText="Fire ID"/>
            </children>
        </GridPane>

        <!-- FORM FOR ADMIN LOGIN        -->
        <GridPane fx:id="adminLoginForm"
                  GridPane.columnIndex="0"
                  GridPane.rowIndex="4"
                  GridPane.rowSpan="2"
                  GridPane.columnSpan="2"
                  alignment="CENTER"
                  hgap="5"
                  vgap="5"
                  visible="false"
                  managed="false">
            <children>
                <TextField
                        fx:id="adminID"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="0"
                        GridPane.columnSpan="2"
                        prefWidth="200"
                        promptText="Username"/>

                <PasswordField
                        fx:id="adminPassword"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="1"
                        GridPane.columnSpan="2"
                        prefWidth="200"
                        promptText="Password"/>
            </children>
        </GridPane>


        <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
            <Button fx:id="loginBtn" text="Login"/>
        </HBox>

        <Text fx:id="errorBox" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" fill="red"/>
    </GridPane>
</fx:root>
